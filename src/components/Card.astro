---
import { Image } from 'astro:assets'
import type { ImageMetadata } from 'astro'

interface Props {
  imgSrc: ImageMetadata | undefined
  imgAlt: string
  href: string
}

const { imgSrc, imgAlt, href } = Astro.props
---

<a
  href={href}
  rel="noopener noreferrer"
  target="_blank"
  class="flex flex-col max-w-sm bg-base-100 border border-base-300 rounded-lg shadow"
>
  {
    imgSrc ? (
      <Image class="rounded-t-lg" src={imgSrc} alt={imgAlt} sizes="100vw" />
    ) : null
  }
  <div class="flex h-full flex-col justify-center gap-4 p-6">
    <slot />
  </div>
</a>
