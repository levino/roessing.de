---
import { Image } from 'astro:assets'
import { render } from 'astro:content'
import { getDay, getWeekday, timeAndDate } from '@/tools/events'
import type { FullEvent } from '@/types'
import AddressLink from './AddressLink.astro'

interface Props {
  event: FullEvent
}
const {
  event: {
    data: { name, startDate, endDate, image, location, organizer },
  },
  event,
} = Astro.props

const { Content } = await render(event)

const day = getDay(startDate)
const weekday = getWeekday(startDate)
---

<div class="container mx-auto px-4 py-8 max-w-4xl">
  {
    image && (
      <figure class="relative mb-6">
        <div class="aspect-[16/9] w-full overflow-hidden rounded-lg">
          <Image
            class="object-cover w-full h-full"
            src={image.src}
            alt={image.alt}
          />
        </div>
        <div class="badge badge-lg badge-primary absolute top-4 left-4 gap-1 font-bold">
          <span class="text-xs uppercase opacity-80">{weekday}</span>
          <span class="text-lg">{day}</span>
        </div>
      </figure>
    )
  }

  <div class="flex items-start gap-4 mb-4">
    {
      !image && (
        <div class="badge badge-lg badge-primary gap-1 font-bold flex-shrink-0">
          <span class="text-xs uppercase opacity-80">{weekday}</span>
          <span class="text-lg">{day}</span>
        </div>
      )
    }
    <h1 class="text-3xl md:text-4xl font-bold break-words min-w-0">
      {name}
    </h1>
  </div>

  <div class="flex flex-col gap-3 mb-6">
    <div class="flex items-center gap-3 text-base-content/70">
      <svg
        class="w-5 h-5 flex-shrink-0"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      <div>
        <span class="font-medium">Beginn:</span> {timeAndDate(startDate)}
      </div>
    </div>

    {
      endDate && (
        <div class="flex items-center gap-3 text-base-content/70">
          <svg
            class="w-5 h-5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
            />
          </svg>
          <div>
            <span class="font-medium">Ende:</span> {timeAndDate(endDate)}
          </div>
        </div>
      )
    }

    {
      location?.data.address && (
        <div class="flex items-center gap-3 text-base-content/70">
          <svg
            class="w-5 h-5 flex-shrink-0"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
            />
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"
            />
          </svg>
          <AddressLink
            name={location.data.name}
            address={location.data.address}
            className="link link-primary"
          />
        </div>
      )
    }
  </div>

  {
    event.data.description && (
      <p class="text-base-content/60 text-lg mb-6">{event.data.description}</p>
    )
  }

  <div class="prose prose-lg max-w-none">
    <Content />
  </div>

  {
    organizer && (
      <>
        <div class="divider" />
        <div class="mt-2">
          <div class="flex items-center gap-3 mb-3">
            <svg
              class="w-5 h-5 flex-shrink-0 text-base-content/60"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0z"
              />
            </svg>
            <span class="text-base-content/60 font-semibold">Veranstalter:in</span>
          </div>
          <h2 class="font-bold text-xl text-base-content mb-2">{organizer.data.name}</h2>
          {organizer.data.email && (
            <div class="flex items-center gap-3 text-base-content/70 mb-1">
              <svg
                class="w-4 h-4 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
              <a href={`mailto:${organizer.data.email}`} class="link link-primary">
                {organizer.data.email}
              </a>
            </div>
          )}
          {organizer.data.telephone && (
            <div class="flex items-center gap-3 text-base-content/70">
              <svg
                class="w-4 h-4 flex-shrink-0"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                />
              </svg>
              <a href={`tel:${organizer.data.telephone}`} class="link link-primary">
                {organizer.data.telephone}
              </a>
            </div>
          )}
        </div>
      </>
    )
  }
</div>
