---
import { Astronav, MenuItems, MenuIcon, StickyHeader } from 'astro-navbar'
---

<StickyHeader
  class="sticky top-0 border-b z-20 transition-all lg:flex dark:bg-slate-800"
  scrollY={50}
  defaultClass="py-5 border-transparent"
  activeClass="py-2 border-gray-200 dark:border-gray-800 backdrop-blur-lg"
>
  <Astronav closeOnClick>
    <div class="container mx-auto flex justify-between">
      <div class="flex w-full lg:w-auto justify-between">
        <a
          href="/"
          class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white"
        >
          RÃ¶ssing
        </a>
        <div class="flex flex-col justify-center lg:hidden">
          <MenuIcon class="w-8 h-8 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden lg:flex">
        <ul class="flex flex-col lg:flex-row lg:gap-5">
          <li class="m-auto">
            <a
              href="/events"
              class="block py-2 pl-3 pr-4 rounded bg-transparent text-teal-700 dark:text-teal-500"
              aria-current="page"
            >
              Veranstaltungen
            </a>
          </li><li class="m-auto">
            <a
              href="/about"
              class="button flex text-white bg-teal-700 hover:bg-teal-800 focus:ring-4 focus:outline-none focus:ring-teal-300 font-medium rounded-lg px-4 py-2 text-center mr-3 dark:bg-teal-600 dark:hover:bg-teal-700 dark:focus:ring-teal-800"
            >
              Mitmachen
            </a>
          </li>
        </ul>
      </MenuItems>
    </div>
  </Astronav>
</StickyHeader>
