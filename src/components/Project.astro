---
import type { ImageMetadata } from 'astro'
import Card from './Card.astro'

interface Props {
  imageSource?: ImageMetadata
  title: string
  subtitle: string
  linkUrl: string
}
const { imageSource, title, subtitle, linkUrl } = Astro.props
---

<Card href={linkUrl} imgSrc={imageSource} imgAlt="event image">
  <h2 class="text-2xl font-bold tracking-tight text-base-content">
    {title}
  </h2>
  <p class="font-normal text-base-content/70">{subtitle}</p>
  <span class="mt-2 text-base-content/60"><slot /></span>
</Card>
