---
import type { ImageMetadata } from 'astro'
import Card from './Card.astro'

interface Props {
  imageSource?: ImageMetadata
  title: string
  subtitle: string
  linkUrl: string
}
const { imageSource, title, subtitle, linkUrl } = Astro.props
---

<Card href={linkUrl} imgSrc={imageSource} imgAlt="event image">
  <h2 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    {title}
  </h2>
  <p class="font-normal text-gray-700 dark:text-gray-400">{subtitle}</p>
  <span class="mt-2 text-slate-500"><slot /></span>
</Card>
